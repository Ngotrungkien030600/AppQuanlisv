<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F44336"
    tools:context=".ActivityAddSubject">

    <TextView
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text=" UPDATE"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <EditText
        android:id="@+id/EditTextUpdateSubjectTitle"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Subject title"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>

    <EditText
        android:id="@+id/EditTextUpdateSubjectCredit"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Credit"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>

    <EditText
        android:id="@+id/EditTextUpdateSubjectTime"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Time"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>

    <EditText
        android:id="@+id/EditTextUpdateSubjectPlace"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Place"
        android:layout_width="300dp"
        android:layout_height="60dp"></EditText>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/buttonUpdateSubject"
        android:layout_gravity="center"
        android:text="Update"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>



</LinearLayout>